ARG1_BONUS = 3 2 one 0
ARG2_BONUS = "" 1

.PHONY: all clean fclean re bonus run run_bonus norm memleak memleak_bonus

all: $(NAMES)

$(NAME): $(OBJS) $(HEAD)
	make -C $(CLIB_DIR)
	$(CC) $(CFLAGS) -o $@ $^ -L$(CLIB_DIR) -l$(CLIB)

$(BONUS_NAME): $(BONUS_OBJS) $(BONUS_HEAD)
	make -C $(CLIB_DIR)
	$(CC) $(CFLAGS) -o $@ $^ -L$(CLIB_DIR) -l$(CLIB)

clean:
	find . -name '*.o' -type f -delete
	find . -name '*.a' -type f -delete

fclean: clean
	rm -f $(NAMES)

re: fclean all

bonus: $(BONUS_NAME)

run: $(NAME) $(BONUS_NAME)
	-./$<
	-./$< $(ARG1)
	-./$< $(ARG1) | ./$(BONUS_NAME) $(ARG1)
	-./$< $(ARG2)
	-./$< $(ARG3) | wc -l
	-./$< $(ARG3) | ./$(BONUS_NAME) $(ARG3)
	-./$< $(ARG4_5) | wc -l
	-./$< $(ARG4_5) | ./$(BONUS_NAME) $(ARG4_5)
	-./$< $(ARG5_5) | wc -l
	-./$< $(ARG5_5) | ./$(BONUS_NAME) $(ARG5_5)
	-./$< $(ARG1_100) | wc -l
	-./$< $(ARG1_100) | ./$(BONUS_NAME) $(ARG1_100)
	-./$< $(ARG2_100) | wc -l
	-./$< $(ARG2_100) | ./$(BONUS_NAME) $(ARG2_100)
	-./$< $(ARG3_100) | wc -l
	-./$< $(ARG3_100) | ./$(BONUS_NAME) $(ARG3_100)
	-./$< $(ARG4_100) | wc -l
	-./$< $(ARG4_100) | ./$(BONUS_NAME) $(ARG4_100)
	-./$< $(ARG1_500) | wc -l
	-./$< $(ARG1_500) | ./$(BONUS_NAME) $(ARG1_500)
	-./$< $(ARG2_500) | wc -l
	-./$< $(ARG2_500) | ./$(BONUS_NAME) $(ARG2_500)
	-./$< $(ARG3_500) | wc -l
	-./$< $(ARG3_500) | ./$(BONUS_NAME) $(ARG3_500)
	-./$< $(ARG4_500) | wc -l
	-./$< $(ARG4_500) | ./$(BONUS_NAME) $(ARG4_500)

run_bonus: $(BONUS_NAME) $(NAME)
	-./$(NAME) $(ARG) | ./$< $(ARG)
	-./$< $(ARG1_BONUS)
	-./$< $(ARG2_BONUS)

norm:
	norminette

memleak: $(NAME)
	valgrind -s --leak-check=full --show-leak-kinds=all ./$< $(ARG)

memleak_bonus: $(BONUS_NAME) $(NAME)
	valgrind -s --leak-check=full --show-leak-kinds=all ./$(NAME) $(ARG) | ./$< $(ARG)

# Thorough teting


test_rank2: $(NAME) $(BONUS_NAME)
	-ARG="1 2"; ./$< $$ARG | wc -l > test_2.log
	-ARG="1 2"; ./$< $$ARG | ./$(BONUS_NAME) $$ARG >> test_2.log
	-ARG="2 1"; ./$< $$ARG | wc -l >> test_2.log
	-ARG="2 1"; ./$< $$ARG | ./$(BONUS_NAME) $$ARG >> test_2.log

test_rank3: $(NAME) $(BONUS_NAME)
	-ARG="1 2 3"; ./$< $$ARG | wc -l > test_3.log
	-ARG="1 2 3"; ./$< $$ARG | ./$(BONUS_NAME) $$ARG >> test_3.log
	-ARG="1 3 2"; ./$< $$ARG | wc -l >> test_3.log
	-ARG="1 3 2"; ./$< $$ARG | ./$(BONUS_NAME) $$ARG >> test_3.log
	-ARG="2 1 3"; ./$< $$ARG | wc -l >> test_3.log
	-ARG="2 1 3"; ./$< $$ARG | ./$(BONUS_NAME) $$ARG >> test_3.log
	-ARG="2 3 1"; ./$< $$ARG | wc -l >> test_3.log
	-ARG="2 3 1"; ./$< $$ARG | ./$(BONUS_NAME) $$ARG >> test_3.log
	-ARG="3 1 2"; ./$< $$ARG | wc -l >> test_3.log
	-ARG="3 1 2"; ./$< $$ARG | ./$(BONUS_NAME) $$ARG >> test_3.log
	-ARG="3 2 1"; ./$< $$ARG | wc -l >> test_3.log
	-ARG="3 2 1"; ./$< $$ARG | ./$(BONUS_NAME) $$ARG >> test_3.log

