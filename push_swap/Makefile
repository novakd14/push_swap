CC = cc
CFLAGS = -Wall -Wextra -Werror -g
CLIB_DIR = libft
CLIB = ft

NAME = push_swap
BONUS_NAME = checker
SRCS = main.c input.c sort.c move_to_positions.c utils.c clean.c
RULES_DIR = rules/
RULES_SRCS = rules_push.c rules_swap.c rules_rotate.c rules_rev_rotate.c
ALGO_DIR = algo/
ALGO_SRCS = sort_low_rank.c insertion_sort.c group_sort.c push_back_groups.c
BONUS_DIR = bonus/
BONUS_SRCS = main_bonus.c input_bonus.c read_instructions_bonus.c utils_bonus.c \
	rules_push_bonus.c rules_swap_bonus.c rules_rotate_bonus.c rules_rev_rotate_bonus.c
HEAD = push_swap.h
BONUS_HEAD = checker_bonus.h

NAMES = $(NAME) $(BONUS_NAME)
RULES_SRCS := $(addprefix $(RULES_DIR), $(RULES_SRCS))
ALGO_SRCS := $(addprefix $(ALGO_DIR), $(ALGO_SRCS))
BONUS_SRCS := $(addprefix $(BONUS_DIR), $(BONUS_SRCS))
BONUS_HEAD := $(addprefix $(BONUS_DIR), $(BONUS_HEAD))
OBJS = $(SRCS:.c=.o) $(RULES_SRCS:.c=.o) $(ALGO_SRCS:.c=.o)
BONUS_OBJS = $(BONUS_SRCS:.c=.o)

ARG1 = 2 1 3 6 5 8
ARG2 = 0 one 2 3
ARG3 = 4 67 3 87 23
ARG4 = 42 100
ARG5 = 100 42
ARG6_100 = 46 18 83 55 72 20 49 61 45 75 88 94 22 87 62 53 17 35 100 25 9 13 90 95 64 47 57 29 85 12 51 14 10 31 5 69 21 24 11 43 58 92 70 41 36 8 44 73 71 39 32 63 82 3 99 16 15 54 65 1 97 84 67 48 33 42 38 34 77 56 79 60 27 40 37 98 6 28 66 86 50 26 74 7 80 19 59 96 68 2 76 78 81 52 30 89 91 23 93 4
ARG7_100 = 54 93 81 33 51 82 76 31 64 41 92 25 66 27 74 11 99 1 62 35 87 26 45 52 95 63 77 70 91 55 21 65 85 40 10 96 23 75 80 94 15 39 100 5 14 13 43 57 12 32 20 49 72 71 34 4 24 2 98 69 68 97 60 47 38 53 16 3 79 18 50 83 37 8 19 67 28 7 48 30 44 22 61 59 42 56 36 29 6 17 84 89 90 86 88 46 78 58 9 73
ARG8_100 = 30 52 89 32 84 55 97 27 53 41 17 12 86 57 80 82 8 85 94 83 2 45 15 96 63 44 6 78 19 11 39 91 54 90 93 40 61 18 50 48 66 74 58 81 75 7 13 73 33 35 5 31 62 65 28 77 29 22 47 36 64 46 56 9 100 99 59 16 1 79 68 4 67 70 23 95 42 20 26 69 25 71 49 92 76 3 24 51 38 43 72 37 88 10 60 34 87 14 21 98
