ARG11 = 8 1 10 9 4 3 5 2 6 7

ARG1_BONUS = 3 2 one 0
ARG2_BONUS = "" 1

.PHONY: all clean fclean re bonus run run_bonus norm memleak memleak_bonus

all: $(NAMES)

$(NAME): $(OBJS) $(HEAD)
	make -C $(CLIB_DIR)
	$(CC) -o $@ $^ -L$(CLIB_DIR) -l$(CLIB)

$(BONUS_NAME): $(BONUS_OBJS) $(BONUS_HEAD)
	make -C $(CLIB_DIR)
	$(CC) -o $@ $^ -L$(CLIB_DIR) -l$(CLIB)

clean:
	find . -name '*.o' -type f -delete
	find . -name '*.a' -type f -delete

fclean: clean
	rm -f $(NAMES)

re: fclean all

bonus: $(BONUS_NAME)

run: $(NAME) $(BONUS_NAME)
	-./$<
	-./$< $(ARG1)
	-./$< $(ARG1) | ./$(BONUS_NAME) $(ARG1)
	-./$< $(ARG2)
	-./$< $(ARG3) | wc -l
	-./$< $(ARG3) | ./$(BONUS_NAME) $(ARG3)
	@# -./$< $(ARG7_100) | wc -l
	@# -./$< $(ARG8_100) | wc -l
	@# -./$< $(ARG9_500) | wc -l
	@# -./$< $(ARG10_500)

run_bonus: $(BONUS_NAME) $(NAME)
	-./$(NAME) $(ARG) | ./$< $(ARG)
	-./$< $(ARG1_BONUS)
	-./$< $(ARG2_BONUS)

norm:
	norminette

memleak: $(NAME)
	valgrind -s --leak-check=full --show-leak-kinds=all ./$< $(ARG)

memleak_bonus: $(BONUS_NAME) $(NAME)
	valgrind -s --leak-check=full --show-leak-kinds=all ./$(NAME) $(ARG) | ./$< $(ARG)
