CC = cc
CFLAGS = -Wall -Wextra -Werror -g -fsanitize=address
CLIB_DIR = libft
CLIB = ft

NAME = push_swap
BONUS_NAME = checker
SRCS = main.c input.c sort.c move_to_positions.c utils.c clean.c
RULES_DIR = rules/
RULES_SRCS = rules_push.c rules_swap.c rules_rotate.c rules_rev_rotate.c
ALGO_DIR = algo/
ALGO_SRCS = sort_rank_three_four.c sort_rank_five.c sort_low_rank.c insertion_sort.c group_sort.c push_back_groups.c
BONUS_DIR = bonus/
BONUS_SRCS = main_bonus.c input_bonus.c read_instructions_bonus.c utils_bonus.c \
	rules_push_bonus.c rules_swap_bonus.c rules_rotate_bonus.c rules_rev_rotate_bonus.c
HEAD = push_swap.h
BONUS_HEAD = checker_bonus.h

NAMES = $(NAME) $(BONUS_NAME)
RULES_SRCS := $(addprefix $(RULES_DIR), $(RULES_SRCS))
ALGO_SRCS := $(addprefix $(ALGO_DIR), $(ALGO_SRCS))
BONUS_SRCS := $(addprefix $(BONUS_DIR), $(BONUS_SRCS))
BONUS_HEAD := $(addprefix $(BONUS_DIR), $(BONUS_HEAD))
OBJS = $(SRCS:.c=.o) $(RULES_SRCS:.c=.o) $(ALGO_SRCS:.c=.o)
BONUS_OBJS = $(BONUS_SRCS:.c=.o)

